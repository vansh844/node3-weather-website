<!DOCTYPE html>

<html>
<head>
    <title>Weather</title>
    <link rel="stylesheet" href="./css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/img/weather.png">
</head>
<body id="color">
    <div class="main-content">
        {{>header}}
        <i class="fa fa-sun-o" onclick="clicky()"></i>
        <p>Refer to this!</p>

        <form>
            <input placeholder="Location">
            <button>Search</button>
        </form>
        <p id="message1"></p>
        <p id="message2"></p>
    </div>
    {{>footer}}
    <script src="js/app.js"></script>
    <script>
function myFunction() {
  document.getElementById("color").style.WebkitTransition = "all 2s"; // Code for Safari 3.1 to 6.0
  document.getElementById("color").style.transition = "all 2s";     // Standard syntax
}
function clicky(){
    document.getElementById('color').style.background = '#4e4e4e';
    document.getElementById('color').style.color = '#d6d6d6';
}
window.onload = myFunction;
</script>
</body>

</html>


